<div class="header">
  <h1>Burgers</h1>
</div>

<div class="devoured">
  <h2>Burgers to be Devoured</h2>
</div>

<div class="devourer">
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="done">
  <h2>Devoured Burgers</h2>
</div>

<div class="not">
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<div class="added">
  <form class="create-form">

    <div class="form-group">
      <label for="br"></label>
      <div class="input"><input type="text" id="br" name="burger_name">
        <button type="submit">Add Burger</button></div>
    </div>

  </form>
</div>

<div class = "image"><img src = "/assets/img/Burger.png" height = "25%" width="25%"></div>